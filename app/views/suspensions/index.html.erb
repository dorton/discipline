<h1>Suspensions</h1>

<table class="table table-bordered table-hover table-condensed">
  <tr>
    <th>Studen name</th>
    <th>Parent name</th>
    <th>Teacher</th>
    <th>Grade</th>
    <th>Days</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Administrator</th>
    <th>Reason</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @suspensions.each do |suspension| %>
  <tr>
    <td><%= suspension.studen_name %></td>
    <td><%= suspension.parent_name %></td>
    <td><%= suspension.teacher %></td>
    <td><%= suspension.grade %></td>
    <td><%= suspension.days %></td>
    <td><%= suspension.start_date %></td>
    <td><%= suspension.end_date %></td>
    <td><%= suspension.administrator %></td>
    <td><%= suspension.reason %></td>
    <td><%= link_to 'Letter', suspension, :target => "_blank" %></td>
    <td><%= link_to 'Edit', edit_suspension_path(suspension) %></td>
    <td><%= link_to 'Delete', suspension, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

